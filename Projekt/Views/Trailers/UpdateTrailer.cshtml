@model Projekt.Models.Trailer.TrailerViewModel
@{
    ViewData["Title"] = "Edycja przyczep";
}
<div class="text-center mb-5">
    <h1 class="display-4">Lista przyczep</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Model</th>
                <th scope="col">Marka</th>
                <th scope="col">Typ</th>
                <th scope="col">Maksymalna ładowność</th>
                <th scope="col">Rok produkcji</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Trailers)
            {
                <tr>
                    <td scope="row">@item.Id</td>
                    <td scope="row">@item.Model</td>
                    <td scope="row">@item.Brand</td>
                    <td scope="row">@item.Type</td>
                    <td scope="row">@item.MaxLoad</td>
                    <td scope="row">@item.YearOfProduction</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<form method="put" asp-controller="Trailers" asp-action="UpdateThisTrailer">
    <div class="form-group">
        <label for="ID">ID: <span style="color:red">*</span></label>
        <input type="number" class="form-control" id="ID" placeholder="Id" name="ID">
    </div>
    <div class="form-group">
        <label for="model">Model: <span style="color:red">*</span></label>
        <input type="text" class="form-control" id="model" placeholder="Model" name="model">
    </div>
    <div class="form-group">
        <label for="brand">Marka: <span style="color:red">*</span></label>
        <input type="text" class="form-control" id="brand" placeholder="Marka" name="brand">
    </div>
    <div class="form-group">
        <label for="type">Typ: <span style="color:red">*</span></label>
        <input type="number" class="form-control" id="type" placeholder="Typ" name="type">
    </div>
    <div class="form-group">
        <label for="maxload">Przebieg: <span style="color:red">*</span></label>
        <input type="number" class="form-control" id="maxload" placeholder="Maksymalna ładowność" name="maxload">
    </div>
    <div class="form-group">
        <label for="yearofproduction">Rok produkcji: <span style="color:red">*</span></label>
        <input type="number" class="form-control" id="yearofproduction" placeholder="Rok produkcji" name="yearofproduction">
    </div>
    <div class="text-center m-5">
        <button type="submit" class="btn btn-success">Wprowadź</button>
        <a class="btn btn-danger" href="javascript: history.go(-1)">Wróć</a>
    </div>
</form>
@model Projekt.Models.Trucks.TrucksViewModel
@{
    ViewData["Title"] = "Usuwanie ciężarówki";
}
<div class="text-center mb-5">
    <h1 class="display-4">Lista ciężarówek</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Model</th>
                <th scope="col">Marka</th>
                <th scope="col">Moc</th>
                <th scope="col">Dystans</th>
                <th scope="col">Rok produkcji</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Trucks)
            {
                <tr>
                    <td scope="row">@item.Id</td>
                    <td scope="row">@item.Model</td>
                    <td scope="row">@item.Brand</td>
                    <td scope="row">@item.Power</td>
                    <td scope="row">@item.Distance</td>
                    <td scope="row">@item.YearOfProduction</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<form method="delete" asp-controller="Trucks" asp-action="DeleteThisTruck">
    <div class="form-group">
        <label for="Id">ID ciężarówki do usunięcia: <span style="color:red">*</span></label>
        <input type="text" class="form-control" id="Id" placeholder="ID ciężarówki" name="Id">

        <div class="text-center m-5">
            <button type="submit" class="btn btn-danger">Usuń</button>
            <a class="btn btn-outline-danger" href="javascript: history.go(-1)">Wróć</a>
        </div>
    </div>
</form>
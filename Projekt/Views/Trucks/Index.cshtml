@model Projekt.Models.Trucks.TrucksViewModel
@{
    ViewData["Title"] = "Lista ciężarówek";
}
@if (TempData["message"] != null)
{
    <script>
        alert('@TempData["message"]');
    </script>
}
<div class="text-center">
    <h1 class="display-4">Lista ciężarówek</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Model</th>
                <th scope="col">Marka</th>
                <th scope="col">Moc</th>
                <th scope="col">Dystans</th>
                <th scope="col">Rok produkcji</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.Trucks)
            {
                <tr>
                    <td scope="row">@item.Id</td>
                    <td scope="row">@item.Model</td>
                    <td scope="row">@item.Brand</td>
                    <td scope="row">@item.Power</td>
                    <td scope="row">@item.Distance</td>
                    <td scope="row">@item.YearOfProduction</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center m-5">
        <a class="btn btn-outline-success" asp-area="" asp-controller="Trucks" asp-action="InsertNewTruck" role="button">Wprowadź nową ciężarówkę</a>
        <a class="btn btn-outline-warning" asp-area="" asp-controller="Trucks" asp-action="UpDateTruck" role="button">Edytuj ciężarówkę</a>
        <a class="btn btn-outline-danger" asp-area="" asp-controller="Trucks" asp-action="DeleteTruck" role="button">Usuń ciężarówkę</a>
    </div>


</div>

@model Projekt.Models.AssignTrailerToTruck.AssignTrailerToTruckViewModel
@{
    ViewData["Title"] = "Przypisz przyczepę do ciężarówki";
}
<div class="text-center">
    <h1 class="display-4">Przypisz ciężarówkę</h1>
    <p>Wybierz ID ciężarówki którą chcesz przypisać, a następnie przyczepę</p>
</div>
<div class="text-center d-flex mb-5">
    <table class="table table-hover m-2">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Model</th>
                <th scope="col">Przypisana</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Trailers)
            {
                    <tr>
                    <td scope="row">@item.Id</td>
                    <td scope="row">@item.Model</td>
                    <td scope="row">@item.IsAssigned</td>
                </tr>
            }
        </tbody>
    </table>
    <table class="table table-hover m-2">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Model</th>
                <th scope="col">Przypisana</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Trucks)
            {
                <tr>
                    <td scope="row">@item.Id</td>
                    <td scope="row">@item.Model</td>
                    <td scope="row">@item.IsAssignedTrailer</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<form method="post" asp-controller="AssignmentTrailers" asp-action="AssignThisTrailer">
    <div class="form-group">
        <label for="Id">ID przyczepy: <span style="color:red">*</span></label>
        <input type="number" class="form-control" id="Id" placeholder="ID przyczepy" name="trailerId">
    </div>
    <div class="form-group">
        <label for="Id">ID ciężarówki: <span style="color:red">*</span></label>
        <input type="number" class="form-control" id="Id" placeholder="ID ciężarówki" name="truckId">
    </div>

    <div class="text-center m-5">
        <button type="submit" class="btn btn-success">Przypisz</button>
        <a class="btn btn-danger" href="javascript: history.go(-1)">Wróć</a>
    </div>
</form>

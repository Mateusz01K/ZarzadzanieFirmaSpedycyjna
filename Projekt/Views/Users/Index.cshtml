@model Projekt.Models.Users.UserViewModel
@{
    ViewData["Title"] = "Użytkownicy";
}
@if (TempData["message"] != null)
{
    <script>
        alert('@TempData["message"]');
    </script>
}

<div class="text-center">
    <h1 class="display-4">Lista użytkowników</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Imie</th>
                <th scope="col">Nazwisko</th>
                <th scope="col">Adres e-mail</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.Users)
            {
                <tr>
                    <td scope="row">@item.Id</td>
                    <td scope="row">@item.FirstName</td>
                    <td scope="row">@item.LastName</td>
                    <td scope="row">@item.Email</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center m-5">
        <a class="btn btn-outline-success" asp-area="" asp-controller="Users" asp-action="CreateUser" role="button">Stwórz użytkownika</a>
        <a class="btn btn-outline-warning" asp-area="" asp-controller="Users" asp-action="UpDateUser" role="button">Edytuj użytkownika</a>
        <a class="btn btn-outline-danger" asp-area="" asp-controller="Users" asp-action="DeleteUser" role="button">Usuń użytkownika</a>
    </div>


</div>
